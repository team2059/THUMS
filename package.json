{
  "name": "THUMS",
  "version": "0.1.0",
  "description": "The Hitchhikers' Utility Management System",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "lint": "./node_modules/.bin/jshint .",
    "check-style": "./node_modules/.bin/jscs .",
    "check-coverage": "./node_modules/.bin/istanbul cover ./node_modules/mocha/bin/_mocha -- -R spec",
    "clear-coverage": "./node_modules/.bin/istanbul check-coverage && \"node_modules/.bin/rimraf\" coverage",
    "pretest": "npm run-script lint && npm run-script check-style",
    "test": "npm run-script check-coverage",
    "posttest": "npm run-script clear-coverage",
    "win-clear": "del database.db"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/team2059/THUMS.git"
  },
  "author": "Team 2059",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/team2059/THUMS/issues"
  },
  "homepage": "https://github.com/team2059/THUMS",
  "dependencies": {
    "babel": "^4.7.16",
    "bcryptjs": "^2.1.0",
    "bookshelf": "^0.7.9",
    "browserify": "^9.0.3",
    "handlebars": "^3.0.1",
    "hapi": "^8.4.0",
    "hapi-auth-cookie": "^2.0.0",
    "knex": "^0.7.6",
    "less": "^2.4.0",
    "marked": "^0.3.3",
    "minifyify": "^6.3.2",
    "npm": "^2.7.3",
    "react": "^0.13.1",
    "sqlite3": "^3.0.5",
    "uglifyify": "^3.0.1"
  },
  "devDependencies": {
    "istanbul": "^0.3.13",
    "jscs": "^1.12.0",
    "jshint": "^2.6.3",
    "mocha": "^2.2.1",
    "rimraf": "^2.3.2"
  },
  "optionalDependencies": {
    "pg": "^4.3.0"
  }
}
